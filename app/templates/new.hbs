<div class='container new'>
  <h2>A new answer to the question</h2>
  {{#if isLoggedIn}}
  <h1>Thank you for answering {{user}}</h1>
  <form>
    <p>
      <label for="answer">Answer</label>
      {{textarea name='answer' rows=10 value=answerText required='true' placeholder='Your answer ipsum here' id='answer'}}
    </p>
	<h3>Skills List</h3>
	<ul>
		{{#each skill in controller.skills}}
		<li>
			{{input type="checkbox" name=skill class="skill" id=skill}}<label {{bind-attr for=skill}}>{{skill}}</label>
		</li>
		{{/each}}
	</ul>
  </form>
	<h3>Preview</h3>
	{{post-answer user=user avatar=avatar text=answerText skills=needSkills date=dateAnswered }}
	<button {{action 'post'}}>Post</button>
  {{else}}
    <button {{action 'login'}}>Login</button>
  {{/if}}
</div>
